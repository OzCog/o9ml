# Production Environment Variables
# Copy this file to .env and modify as needed

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=erpnext_production
DB_USER=erpnext_production
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Redis Configuration
REDIS_CACHE_URL=redis://localhost:6379/0
REDIS_QUEUE_URL=redis://localhost:6379/1
REDIS_SOCKETIO_URL=redis://localhost:6379/2

# Site Configuration
SITE_NAME=example.com
BENCH_NAME=frappe-bench
ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# Production Settings
DEVELOPER_MODE=0
SERVER_SCRIPT_ENABLED=0
DISABLE_WEBSITE_CACHE=0
ALLOW_TESTS=0

# Email Configuration
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USE_TLS=1
EMAIL_LOGIN=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_SENDER=no-reply@example.com

# Logging
LOG_LEVEL=ERROR
LOG_FILE=logs/frappe.log

# Ports
WEBSERVER_PORT=8000
SOCKETIO_PORT=9000
FILE_WATCHER_PORT=6787

# Workers
BACKGROUND_WORKERS=4

# Features
AUTO_UPDATE=0
SCHEDULER_ENABLED=1
MAINTENANCE_MODE=0

# Security
CSRF_PROTECTION=1
FORCE_HTTPS=1
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300

# Backup Configuration
BACKUP_ENABLED=1
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/frappe-bench