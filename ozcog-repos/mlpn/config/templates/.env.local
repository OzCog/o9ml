# Local Development Environment Variables
# Copy this file to .env and modify as needed

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=erpnext_local
DB_USER=erpnext_local
DB_PASSWORD=erpnext_local

# Redis Configuration
REDIS_CACHE_URL=redis://localhost:6379/0
REDIS_QUEUE_URL=redis://localhost:6379/1
REDIS_SOCKETIO_URL=redis://localhost:6379/2

# Site Configuration
SITE_NAME=erpnext.local
BENCH_NAME=frappe-bench
ADMIN_PASSWORD=admin

# Development Settings
DEVELOPER_MODE=1
SERVER_SCRIPT_ENABLED=1
DISABLE_WEBSITE_CACHE=1
ALLOW_TESTS=1

# Email Configuration (for development)
EMAIL_SMTP_SERVER=localhost
EMAIL_SMTP_PORT=587
EMAIL_USE_TLS=1
EMAIL_LOGIN=
EMAIL_PASSWORD=
EMAIL_SENDER=no-reply@erpnext.local

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/frappe.log

# Ports
WEBSERVER_PORT=8000
SOCKETIO_PORT=9000
FILE_WATCHER_PORT=6787

# Workers
BACKGROUND_WORKERS=1

# Features
AUTO_UPDATE=0
SCHEDULER_ENABLED=1
MAINTENANCE_MODE=0